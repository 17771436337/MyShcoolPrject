<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_toRightOf="@+id/layout_comment_tv"
            android:id="@+id/item_message_list_status"
            android:layout_width="30dp"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp"

            android:background="@drawable/tv_oval"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/item_message_list_pp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="品牌"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="+"/>
        <TextView
            android:id="@+id/item_message_list_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="品类"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_refresh"/>


</LinearLayout>