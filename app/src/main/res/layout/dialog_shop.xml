<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:divider="@color/bg_transparency"
                android:dividerPadding="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="6"
                android:paddingTop="10dp"
                android:showDividers="end">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/dialog_shop_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dialog_shop_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/dialog_shop_pirac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="14sp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black_transparency_text"
                        android:textSize="12sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/black_border_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/pop_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:gravity="center"

                        android:text="一"
                        android:textColor="#C3C3C3"/>

                    <TextView
                        android:id="@+id/dialog_shop_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/black_border_shape"
                        android:text="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/pop_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="+"
                        android:gravity="center"
                        android:textColor="#C3C3C3"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/dialog_shop_delete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_delete_1"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="款式颜色："
                android:textColor="@color/black_transparency_text"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/dialog_shop_color"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#5E5E5E"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="尺码："
                android:textColor="@color/black_transparency_text"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dialog_shop_s"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textColor="#5E5E5E"
                    android:background="@drawable/black_border_shape"
                    android:layout_marginTop="10dp"
                   />
                <TextView
                    android:id="@+id/dialog_shop_m"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="#5E5E5E"
                    android:background="@drawable/black_border_shape"
                    android:layout_marginTop="10dp"
                   />
                <TextView
                    android:id="@+id/dialog_shop_l"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="#5E5E5E"
                    android:background="@drawable/black_border_shape"
                    android:layout_marginTop="10dp"
                   />
            </LinearLayout>

            <TextView
                android:id="@+id/dialog_shop_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/login_button"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16sp"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>