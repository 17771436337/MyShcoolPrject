<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:divider="@color/bg_transparency"
    android:dividerPadding="1dp"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <com.example.a.myapplication.view.RoundImageView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/android"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/head"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/black_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/shop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_message_com"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginRight="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/message_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shop_num"
            android:layout_toLeftOf="@+id/shop_num"
            android:layout_toStartOf="@+id/shop_num"
            android:drawableLeft="@drawable/icon_collect_ch"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text=""
            android:layout_marginRight="18dp"
            android:textColor="@color/black_text"
            android:textSize="20sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@color/bg_transparency"
        android:dividerPadding="1dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <FrameLayout
            android:id="@+id/check_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/check_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_message_look"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="查看解答"
                android:textColor="@color/black_text"
                android:textSize="15sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_we_ch"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="我来解答"
                android:textColor="@color/black_text"
                android:textSize="15sp"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>