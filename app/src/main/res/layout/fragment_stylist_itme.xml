<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.a.myapplication.activity.TestActivity">

        <FrameLayout
            android:id="@+id/fragment_stylist_itme_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fragment_stylist_itme_img"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <com.example.a.myapplication.view.RoundImageView
                    android:id="@+id/fragment_stylist_itme_head"
                    android:layout_width="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/icon_integeral_1"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/fragment_stylist_itme_head_name"
                    android:layout_toRightOf="@+id/fragment_stylist_itme_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:text="时尚先锋"/>

                <TextView
                    android:id="@+id/fragment_stylist_itme_head_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    android:text="200"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/fragment_stylist_itme_head_num"
                    android:src="@drawable/icon_collect"/>
            </RelativeLayout>
        </FrameLayout>




</RelativeLayout>
