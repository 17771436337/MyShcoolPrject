            <!--app:dots_primary_color="?icon_like_color"-->
            <!--app:dots_secondary_color="?icon_like_color"-->
            <!--app:icon_size="28dp"-->
            <!--app:like_drawable="?icon_like_yes"-->
            <!--app:unlike_drawable="?icon_like_no" />-->

        <!--<TextView-->
            <!--android:id="@+id/tvShowTime"-->
